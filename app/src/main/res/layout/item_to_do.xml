<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="8dp"
        android:backgroundTint="#F3EBE5"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/chekked_tayyor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingVertical="8dp"
                android:shadowColor="@color/toolbar" />

            <TextView

                android:id="@+id/tv_title"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_muhim"
                android:layout_toEndOf="@id/chekked_tayyor"
                android:fontFamily="@font/muli"
                android:text=""
                android:inputType="text"
                android:ellipsize="end"
                android:textColor="@color/toolbar"
                android:textSize="14sp"
                tools:ignore="TextViewEdits" />
            <ImageView
               android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/iv_muhim"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_warn">
            </ImageView>
            <View
                android:id="@+id/view_finish"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/chekked_tayyor"
                android:layout_marginEnd="48dp"
                android:visibility="invisible"
                android:background="@color/toolbar" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>