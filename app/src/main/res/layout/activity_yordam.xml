<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Yordam">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:background="@color/toolbar">
    <ImageView
        android:id="@+id/iv_chiqish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/baseline_arrow_back_24"/>
    <LinearLayout
        android:layout_toEndOf="@id/iv_chiqish"
        android:id="@+id/li_iddd"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_above="@id/iv_rasm"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_yordam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yordam kerakmi?         "
            android:textSize="18sp"

            android:textColor="@color/white"
            android:layout_toEndOf="@id/iv_chiqish"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_rasm"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_chiqish"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/jasur_costumer_servisw"
        />

</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="7"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text1"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Biz bilan bog`laning"
        android:fontFamily="@font/muli_bold"
        android:textSize="24sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text2"
        android:layout_below="@id/tv_text1"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textAlignment="center"
        android:text="@string/siz_taklifi"
        android:textSize="17sp"
        />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_telegram"
            android:layout_below="@id/tv_text2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="24sp"
            app:cardElevation="4dp">
            <LinearLayout
                android:background="#E8DED8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    app:cardCornerRadius="30dp"
                    android:backgroundTint="@color/toolbar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@drawable/telegram_icon_131945"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Telegram orqali"
                    android:layout_marginStart="45dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/muli_bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mail"
        android:layout_below="@id/cv_telegram"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="24sp"
        app:cardElevation="4dp">
        <LinearLayout
            android:background="#E8DED8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/toolbar"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/mail_email_message_electronic_online_web_icon_icons_com_59986"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Email orqali"
                android:layout_marginStart="70dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/muli_bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>

</LinearLayout>